{
  "name": "@ai-writer/vscode-ext",
  "displayName": "AI Writer VS Code Extension",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/extension.js",
  "types": "dist/extension.d.ts",
  "engines": {
    "vscode": "^1.95.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-writer",
          "title": "AI Writer",
          "icon": "$(pencil)"
        }
      ]
    },
    "views": {
      "ai-writer": [
        {
          "id": "ai-writer.sessionsView",
          "name": "Sessions",
          "when": "true"
        },
        {
          "id": "ai-writer.templatesView",
          "name": "Templates",
          "when": "true"
        },
        {
          "id": "ai-writer.templateDetailView",
          "name": "Template Details",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-writer.startOutline",
        "title": "AI Writer: Start Outline Generation",
        "category": "AI Writer"
      },
      {
        "command": "ai-writer.startDraft",
        "title": "AI Writer: Start Draft Generation",
        "category": "AI Writer"
      },
      {
        "command": "ai-writer.listTemplates",
        "title": "AI Writer: List Templates",
        "category": "AI Writer"
      },
      {
        "command": "ai-writer.createTemplate",
        "title": "AI Writer: Create Template",
        "category": "AI Writer"
      },
      {
        "command": "ai-writer.editTemplate",
        "title": "AI Writer: Edit Template",
        "category": "AI Writer"
      },
      {
        "command": "ai-writer.viewComplianceReport",
        "title": "AI Writer: View Compliance Report",
        "category": "AI Writer"
      },
      {
        "command": "ai-writer.listPersonas",
        "title": "AI Writer: List Personas",
        "category": "AI Writer"
      },
      {
        "command": "ai-writer.createPersona",
        "title": "AI Writer: Create Persona",
        "category": "AI Writer"
      },
      {
        "command": "ai-writer.editPersona",
        "title": "AI Writer: Edit Persona",
        "category": "AI Writer"
      },
      {
        "command": "ai-writer.validateCompatibility",
        "title": "AI Writer: Validate Persona-Template Compatibility",
        "category": "AI Writer"
      },
      {
        "command": "ai-writer.viewStorageStats",
        "title": "AI Writer: View Storage Statistics",
        "category": "AI Writer"
      },
      {
        "command": "ai-writer.viewAuditStats",
        "title": "AI Writer: View Audit Statistics",
        "category": "AI Writer"
      },
      {
        "command": "ai-writer.cleanupStorage",
        "title": "AI Writer: Cleanup Old Sessions",
        "category": "AI Writer"
      },
      {
        "command": "ai-writer.openSession",
        "title": "Open Session",
        "category": "AI Writer"
      },
      {
        "command": "ai-writer.showTemplateDetails",
        "title": "Show Template Details",
        "category": "AI Writer"
      },
      {
        "command": "ai-writer.refreshSessions",
        "title": "Refresh Sessions",
        "category": "AI Writer",
        "icon": "$(refresh)"
      },
      {
        "command": "ai-writer.refreshTemplates",
        "title": "Refresh Templates",
        "category": "AI Writer",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ai-writer.refreshSessions",
          "when": "view == ai-writer.sessionsView",
          "group": "navigation"
        },
        {
          "command": "ai-writer.refreshTemplates",
          "when": "view == ai-writer.templatesView",
          "group": "navigation"
        }
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
  "lint": "ESLINT_USE_FLAT_CONFIG=false eslint \"src/**/*.ts\"",
    "test": "vitest run"
  },
  "dependencies": {
    "@ai-writer/base": "workspace:*"
  }
}
