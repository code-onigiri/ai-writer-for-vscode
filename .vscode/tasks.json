{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build vscode extension",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "--filter",
        "@ai-writer/vscode-ext",
        "build"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$tsc"
      ]
    }
  ]
}
